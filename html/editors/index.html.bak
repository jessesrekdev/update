  <script src="/script.js"></script>
  <script src="/template.js"></script>
  
  <script>
    // GSAP Animations
    document.addEventListener('DOMContentLoaded', () => {
      // Animate steps in sequence
      gsap.utils.toArray('.editor-step').forEach((step, i) => {
        gsap.to(step, {
          scrollTrigger: {
            trigger: step,
            start: "top 80%",
            toggleActions: "play none none none"
          },
          opacity: 1,
          y: 0,
          duration: 0.8,
          delay: i * 0.2
        });
      });
      
      // Platform tabs functionality
      const tabs = document.querySelectorAll('.platform-tab');
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          tabs.forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          
          document.getElementById('windows-tab').style.display = 'none';
          document.getElementById('mac-tab').style.display = 'none';
          
          if(tab.dataset.tab === 'windows') {
            document.getElementById('windows-tab').style.display = 'block';
          } else {
            document.getElementById('mac-tab').style.display = 'block';
          }
        });
      });
      
      // Floating animation for SVG
      gsap.to(".floating", {
        y: 10,
        duration: 2,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut"
      });
    });
  </script>
