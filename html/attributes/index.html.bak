  <script>
    // GSAP Animations
    document.addEventListener('DOMContentLoaded', () => {
      // Register ScrollTrigger plugin
      gsap.registerPlugin(ScrollTrigger);
      
      // Animate attribute cards with 3D effects
      gsap.utils.toArray('.attribute-card').forEach((card, i) => {
        gsap.fromTo(card, 
          { 
            opacity: 0,
            y: 50,
            rotationX: 30,
            transformOrigin: "bottom center"
          },
          {
            opacity: 1,
            y: 0,
            rotationX: 0,
            duration: 0.8,
            ease: "back.out(1.2)",
            scrollTrigger: {
              trigger: card,
              start: "top 80%",
              toggleActions: "play none none none",
              markers: false
            },
            delay: i * 0.1
          }
        );
      });
      
      // URL type selector
      const urlOptions = document.querySelectorAll('.attribute-option');
      const urlExamples = document.querySelectorAll('.url-example');
      
      urlOptions.forEach(option => {
        option.addEventListener('click', () => {
          urlOptions.forEach(opt => opt.classList.remove('active'));
          option.classList.add('active');
          
          const urlType = option.dataset.urlType;
          urlExamples.forEach(example => example.style.display = 'none');
          document.getElementById(`${urlType}-url`).style.display = 'block';
        });
      });
      
      // Quote type selector
      const quoteOptions = document.querySelectorAll('.quote-option');
      const quoteExamples = document.querySelectorAll('.quote-example');
      
      quoteOptions.forEach(option => {
        option.addEventListener('click', () => {
          quoteOptions.forEach(opt => opt.classList.remove('active'));
          option.classList.add('active');
          
          const quoteType = option.dataset.quote;
          quoteExamples.forEach(example => example.style.display = 'none');
          document.getElementById(`${quoteType}-quote`).style.display = 'block';
        });
      });
      
      // Exercise buttons
      const exerciseOptions = document.querySelectorAll('.exercise-option');
      const exerciseFeedback = document.getElementById('exerciseFeedback');
      
      exerciseOptions.forEach(option => {
        option.addEventListener('click', () => {
          const isCorrect = option.dataset.correct === 'true';
          
          exerciseOptions.forEach(opt => {
            opt.style.backgroundColor = 'white';
            opt.style.borderColor = '#E0E0E0';
          });
          
          option.style.backgroundColor = isCorrect ? '#E8F5E9' : '#FFEBEE';
          option.style.borderColor = isCorrect ? '#4CAF50' : '#F44336';
          
          exerciseFeedback.style.display = 'block';
          exerciseFeedback.firstElementChild.textContent = isCorrect 
            ? 'Correct! This is the proper way to specify an attribute.' 
            : 'Incorrect. The correct syntax is: &lt;img src="img_girl.jpg"&gt;';
          
          exerciseFeedback.style.backgroundColor = isCorrect ? '#E8F5E9' : '#FFEBEE';
          exerciseFeedback.style.borderLeft = isCorrect ? '4px solid #4CAF50' : '4px solid #F44336';
        });
      });
      
      // Floating animations
      gsap.to(".floating", {
        y: 15,
        duration: 2,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut"
      });
      
      // Pulse animation for important elements
      gsap.to(".pulse", {
        scale: 1.05,
        duration: 1,
        repeat: -1,
        yoyo: true,
        ease: "power1.inOut"
      });
      
      // Navigation buttons
      document.getElementById("next").addEventListener("click", function() {
        window.location.href = '../next-chapter';
      });
      
      document.getElementById("preview").addEventListener("click", function() {
        window.location.href = '../previous-chapter';
      });
    });
  </script>
