  <script>
    // GSAP Animations
    document.addEventListener('DOMContentLoaded', () => {
      // Register ScrollTrigger plugin
      gsap.registerPlugin(ScrollTrigger);
      
      // Animate element cards on scroll
      gsap.utils.toArray('.element-card').forEach((card, i) => {
        gsap.fromTo(card, 
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: card,
              start: "top 80%",
              toggleActions: "play none none none"
            }
          }
        );
      });
      
      // Case sensitivity toggle
      const caseOptions = document.querySelectorAll('.case-option');
      const caseExample = document.getElementById('caseExample');
      
      caseOptions.forEach(option => {
        option.addEventListener('click', () => {
          caseOptions.forEach(opt => opt.classList.remove('active'));
          option.classList.add('active');
          
          const caseType = option.dataset.case;
          let htmlContent = '';
          
          if (caseType === 'lower') {
            htmlContent = `
              <p><span style="color: #569CD6;">&lt;html&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;body&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;h1&gt;</span>This is a heading<span style="color: #569CD6;">&lt;/h1&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;p&gt;</span>This is a paragraph.<span style="color: #569CD6;">&lt;/p&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;/body&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;/html&gt;</span></p>
            `;
          } else if (caseType === 'upper') {
            htmlContent = `
              <p><span style="color: #569CD6;">&lt;HTML&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;BODY&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;H1&gt;</span>This is a heading<span style="color: #569CD6;">&lt;/H1&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;P&gt;</span>This is a paragraph.<span style="color: #569CD6;">&lt;/P&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;/BODY&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;/HTML&gt;</span></p>
            `;
          } else {
            htmlContent = `
              <p><span style="color: #569CD6;">&lt;Html&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;Body&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;H1&gt;</span>This is a heading<span style="color: #569CD6;">&lt;/h1&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;p&gt;</span>This is a paragraph.<span style="color: #569CD6;">&lt;/P&gt;</span></p>
              <p><span style="color: #569CD6;">&lt;/body&gt;</span></p> 
              <p><span style="color: #569CD6;">&lt;/Html&gt;</span></p>
            `;
          }
          
          gsap.to(caseExample, {
            opacity: 0,
            y: 10,
            duration: 0.2,
            onComplete: () => {
              caseExample.innerHTML = htmlContent;
              gsap.to(caseExample, { opacity: 1, y: 0, duration: 0.2 });
            }
          });
        });
      });
      
      // Nested Elements Diagram Animation
      const nestedBoxes = document.querySelectorAll('.nested-box');
      gsap.from(nestedBoxes, {
        opacity: 0,
        scale: 0.8,
        stagger: 0.2,
        duration: 0.8,
        ease: "back.out(1.7)",
        scrollTrigger: {
          trigger: '.nested-diagram',
          start: "top 80%",
          toggleActions: "play none none none"
        }
      });
      
      // Exercise button logic
      const exerciseButtons = document.querySelectorAll('.element-card:last-of-type button');
      const feedback = document.getElementById('exerciseFeedback');
      const feedbackText = feedback.querySelector('p');
      
      exerciseButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const isCorrect = e.target.textContent.trim() === 'False';
          
          if (isCorrect) {
            feedback.style.backgroundColor = '#E8F5E9';
            feedback.style.borderLeft = '4px solid #4CAF50';
            feedbackText.style.color = '#333';
            feedbackText.innerHTML = '<strong>Correct!</strong> Empty elements, like &lt;br&gt; and &lt;img&gt;, do not have a closing tag.';
          } else {
            feedback.style.backgroundColor = '#FFEBEE';
            feedback.style.borderLeft = '4px solid #F44336';
            feedbackText.style.color = '#333';
            feedbackText.innerHTML = '<strong>Incorrect.</strong> Empty elements are self-closing and do not have an end tag.';
          }
          
          gsap.fromTo(feedback, 
            { opacity: 0, y: 10, display: 'none' },
            { opacity: 1, y: 0, duration: 0.4, display: 'block' }
          );
        });
      });
      
      // Toggle Theme Functionality
      const toggleThemeBtn = document.getElementById('toggleTheme');
      const themeIcon = document.getElementById('themeIcon');
      const sun = themeIcon.querySelector('.sun');
      const moon = themeIcon.querySelector('.moon');

      let isDark = false;

      toggleThemeBtn.addEventListener('click', () => {
        isDark = !isDark;
        document.body.classList.toggle('dark-mode');

        if (isDark) {
          // Animate to dark mode
          gsap.to(sun, { opacity: 0, duration: 0.5, ease: "power2.in" });
          gsap.to(moon, { opacity: 1, scale: 1, duration: 0.5, ease: "power2.out" });
        } else {
          // Animate to light mode
          gsap.to(sun, { opacity: 1, duration: 0.5, ease: "power2.out" });
          gsap.to(moon, { opacity: 0, scale: 0.7, duration: 0.5, ease: "power2.in" });
        }
      });
    });
  </script>

  <script src="/script.js"></script>
  <script src="/template.js"></script>
</body>
</html>