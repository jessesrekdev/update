  <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/style.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
  <style>
    /* Element Cards Animation */
    .element-card {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .element-card.visible {
      opacity: 1;
      transform: translateY(0);
    }
    
    /* Tag Visualization */
    .tag-visual {
      display: inline-flex;
      align-items: center;
      background: #f0f4ff;
      border-radius: 6px;
      padding: 2px 8px;
      font-family: 'Fira Code', monospace;
      color: #4285F4;
      font-weight: 500;
    }
    
    .tag-visual .tag-angle {
      color: #5f6368;
      font-weight: bold;
    }
    
    /* Nested Elements Diagram */
    .nested-diagram {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 20px;
      margin: 30px 0;
      position: relative;
      overflow: hidden;
    }
    
    .nested-box {
      border: 2px solid #4285F4;
      border-radius: 8px;
      padding: 15px;
      margin: 10px;
      position: relative;
      background: white;
    }
    
    .nested-box::before {
      content: attr(data-tag);
      position: absolute;
      top: -12px;
      left: 10px;
      background: white;
      padding: 0 5px;
      font-size: 0.8rem;
      color: #4285F4;
      font-weight: bold;
    }
    
    /* Case Sensitivity Toggle */
    .case-toggle {
      display: flex;
      background: #f0f0f0;
      border-radius: 30px;
      padding: 5px;
      margin: 20px 0;
      max-width: 400px;
    }
    
    .case-option {
      flex: 1;
      text-align: center;
      padding: 10px;
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .case-option.active {
      background: #4285F4;
      color: white;
    }
    
    /* Element Table */
    .element-table {
      width: 100%;
      border-collapse: collapse;
      margin: 30px 0;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
    
    .element-table th {
      background: #4285F4;
      color: white;
      padding: 12px;
      text-align: left;
    }
    
    .element-table td {
      padding: 12px;
      border-bottom: 1px solid #eee;
    }
    
    .element-table tr:hover {
      background: #f8f9fa;
    }
    
    /* Floating Animation */
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .floating {
      animation: float 4s ease-in-out infinite;
    }
    
    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .nested-box {
        padding: 10px;
        margin: 8px;
      }
    }
  </style>
</head>

